<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textBlasti"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="252dp"
        android:outlineSpotShadowColor="#C7C0C0"
        android:shadowColor="#C7C0C0"
        android:text="BLASTI"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#C7C0C0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="268dp"
        android:layout_height="260dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/textDiscriptif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travailler, voyager, répéter "
        android:textColor="#213502"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBlasti"
        app:layout_constraintVertical_bias="0.032" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="317dp"
        android:layout_height="70dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="@color/white"
        android:text="Continuer avec Facebook "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnConnecter"
        app:layout_constraintEnd_toEndOf="@+id/btnConnecter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnConnecter"
        app:layout_constraintTop_toBottomOf="@id/btnSinscrire"
        android:onClick="btnFacebook"
        />

    <Button
        android:id="@+id/btnSinscrire"
        android:layout_width="317dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:onClick="choixMode"
        android:text="S'inscrire gratuitement "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
        app:layout_constraintEnd_toEndOf="@+id/btnConnecter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnConnecter"
        app:layout_constraintTop_toBottomOf="@+id/textDiscriptif" />

    <Button
        android:id="@+id/btnConnecter"
        android:layout_width="317dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:onClick="signIn"
        android:text="Se connecter "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPasser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebook" />

    <Button
        android:id="@+id/btnPasser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Passer > "
        android:onClick="goToAccueilInvite"
        android:textSize="12sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>